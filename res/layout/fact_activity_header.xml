<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/carmodelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:visibility="gone"
        android:text="Mersedes Benz E250"
        android:textSize="@dimen/text_size_medium" />
    <Gallery
        android:id="@+id/pictureGallery"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/factImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/pictureGallery"
        android:gravity="center"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/factImageView"
        android:text="1 ноября 2011"
        android:textColor="#999999"
        android:textSize="@dimen/text_size_medium" />
    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dateTextView"
        />

</RelativeLayout>