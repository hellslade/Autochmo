<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/ad_selectable_background</item>
    </style>
    <style name="CustomTitleStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_extra_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#959595</item>
    </style>
    
